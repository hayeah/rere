#sign_up
  %h1
    Join our 
    .highlight 
      Community
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    %table
      %tr
        %th 
          %label Full Name
        %td.signup_field
          = f.text_field :name
        %td.signup_error
          - if !resource.errors[:name].empty?
            = errorarrow
            %div.error_text
              = "Name #{resource.errors[:name][0]}"
      %tr
        %th
        %td.hint{:colspan => "2"}
          Your name is
          %b not displayed
      %tr
        %th
          %label Username
        %td.signup_field
          = f.text_field :username
        %td.signup_error
          - if !resource.errors[:username].empty?
            = errorarrow
            %div.error_text
              = "Username #{resource.errors[:username][0]}"
      %tr
        %th
        %td.hint{:colspan => "2"}
          You will use this to log in
      %tr
        %th
          %label Password
        %td.signup_field
          = f.password_field :password
        %td.signup_error
          - if !resource.errors[:password].empty?
            = errorarrow
            %div.error_text
              = "Password #{resource.errors[:password][0]}"
      %tr
        %th
        %td.hint{:colspan => "2"}
          At least 6 characters
      %tr
        %th
          %label Confirm Password
        %td.signup_field
          = f.password_field :password_confirmation
      %tr
        %th
        %td.hint{:colspan => "2"}
          Re-type your password
      %tr
        %th
          %label Email
        %td.signup_field
          = f.text_field :email
        %td.signup_error
          - if !resource.errors[:email].empty?
            = errorarrow
            %div.error_text
              = "Email #{resource.errors[:email][0]}"
      %tr
        %th
        %td.hint{:colspan => "2"}
          Your email will not be displayed publicly
      %tr.tos
        %th
          %label Terms of Service
        %td{:colspan => "2"}
          %code= render :partial => "shared/tos"
      %tr.tos
        %th
        %td.hint{:colspan => "2"}
          By clicking on "Create my account" button below, you are agreeing to the Terms of Service above and the Private Policy
      %tr
        %th
        %td{:colspan => "2"}
          = f.submit 'Create my account', { :src => '/images/create_account_button.png', :class => 'submit' }
