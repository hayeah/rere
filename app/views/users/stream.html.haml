- content_for(:panel) do
  - if !user_is_owner? && !current_user.watching?(owner)
    %div= link_to "Watch", watch_path(:username => owner.username), {:method => :post}
  %div.followBox
    %h3 watched by:
    %p #{owner.watchers.size}
  %ul.followList
    - owner.watchers.each do |watcher|
      %li= link_to_user(watcher)
  %div.followBox
    %h3 watching:
    %p #{owner.watched.size}
  %ul.followList
    - owner.watched.each do |watched|
      %li= link_to_user(watched)
  %hr
  %div
    %h3.groupTitle Groups
    %div.startGroup= link_to("Start a Group!",new_group_path)
    %ul.followList
      - owner.groups.each do |group|
        %li= link_to(group.name,group_path(:id => group.id))

%div
  %br
  - unless user_is_owner?
    #{owner.name}'s stream
  - else
    Hi #{current_user.name}, what's on your mind?
    = form_tag :action => :share  do
      = text_area_tag :content, {},:class => "sayText", :id => "sayBox", :tabindex => 1
      = submit_tag "Share", :class => "saySubmit"
  = render :partial => "thought/list"         