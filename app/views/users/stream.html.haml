#header
  = image_tag("logo.png")
  #toolbar
    = link_to "Sign Out", destroy_user_session_path

#content
  #sidebar
    #portrait
      - if owner.avatar
        = image_tag owner.avatar.url(:thumb)
    #navigation
      .groups
        %h2 Groups
        %ul
          - owner.groups.each do |group|
            %li= link_to(group.name,group_path(:id => group.id))
      .followings
        %h2 Followings
        %ul
          - owner.watched.each do |watched|
            %li= link_to_user(watched)
        
  - if user_is_owner?
    #share_prompt
      = form_tag :action => :share  do
        = text_area_tag :content
        = image_submit_tag "share-button.png", :class => "submit"
  #stream
    = render :partial => "thought/list"
    
