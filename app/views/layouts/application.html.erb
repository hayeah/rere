<!DOCTYPE html>
<html>
<head>
  <title>Rere</title>
  <%= stylesheet_link_tag :all, 'rere_default' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'autoresize.jquery' %>
  <%= javascript_include_tag 'jquery.min' %>
  <%= csrf_meta_tag %>
</head>
<body onload="window.sayBox.focus()">

<div id="preheader">
  <%= link_to(image_tag("rerewind_logo.png"),root_path,:class => "logo") %>
	<div id="userheader">
		<b class="spiffy">
		<b class="spiffy1"><b></b></b>
	 	<b class="spiffy2"><b></b></b>
		<b class="spiffy3"></b>
		<b class="spiffy4"></b>
		<b class="spiffy5"></b></b>
		<div class="userpanel">
        	<p>Signed in as <%= current_user.name %> | <%= link_to "Profile", user_session_path %> | <%= link_to "Sign Out", destroy_user_session_path %></p>
		</div>
	  	<b class="spiffy">
		<b class="spiffy5"></b>
		<b class="spiffy4"></b>
		<b class="spiffy3"></b>
		<b class="spiffy2"><b></b></b>
		<b class="spiffy1"><b></b></b></b>
	</div>
</div>

<div id="header">
	  <b class="spiffy">
	  <b class="spiffy1"><b></b></b>
	  <b class="spiffy2"><b></b></b>
	  <b class="spiffy3"></b>
	  <b class="spiffy4"></b>
	  <b class="spiffy5"></b></b>

	  <div class="spiffyfg">
	    <img src="/images/rerewind_banner.png"></img>
	  </div>

	  <b class="spiffy">
	  <b class="spiffy5"></b>
	  <b class="spiffy4"></b>
	  <b class="spiffy3"></b>
	  <b class="spiffy2"><b></b></b>
	  <b class="spiffy1"><b></b></b></b>
</div>

<div id="main">
	<b class="spiffy">
	<b class="spiffy1"><b></b></b>
 	<b class="spiffy2"><b></b></b>
	<b class="spiffy3"></b>
	<b class="spiffy4"></b>
	<b class="spiffy5"></b></b>
	<div class="spiffyfg2">
		<div class="mainContent">
			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>
			<%= yield %>
		</div>
		<div class="rightPanel">
			<%= yield :panel %>
		</div>
	</div>
	<b class="spiffy">
	<b class="spiffy5"></b>
	<b class="spiffy4"></b>
	<b class="spiffy3"></b>
	<b class="spiffy2"><b></b></b>
	<b class="spiffy1"><b></b></b></b>
</div>

<div id="footer">
	<div id="footPanel">
		<b class="spiffy">
		<b class="spiffy1"><b></b></b>
	 	<b class="spiffy2"><b></b></b>
		<b class="spiffy3"></b>
		<b class="spiffy4"></b>
		<b class="spiffy5"></b></b>
		<div class="foot">
        	<p> (c) rerewind 2010 </p>
		</div>
	  	<b class="spiffy">
		<b class="spiffy5"></b>
		<b class="spiffy4"></b>
		<b class="spiffy3"></b>
		<b class="spiffy2"><b></b></b>
		<b class="spiffy1"><b></b></b></b>
	</div>
</div>

</body>
</html>
